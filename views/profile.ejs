<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/global.css">
    <title>Pinterest</title>
</head>

<body>

    <nav>
        <img src="https://upload.wikimedia.org/wikipedia/commons/0/08/Pinterest-logo.png" alt="logo">
        <a href="/home" class="">Home</a>
        <a href="/explore">Explore</a>
        <a href="/create">Create</a>
        <input type="text" placeholder="Search" class="search-item" id="search">
        <img src="/images/assets/bell.png" alt="">
        <div class="profile">
            <img src="/images/dps/<%= dp %>" alt="">
        </div>
        <button id="login" onclick="window.open('/logout','_self')">Log out</button>
    </nav>

    <div class="profile-main">
        <div class="dp"><img src="/images/dps/<%= dp %>" alt=""></div>
        <h1>
            <%= fullname %>
        </h1>
        <p>@<%= username %>
        </p>
        <button onclick="window.open('/editprofile','_self')">Edit Profile</button>
        <h3>Pin Created</h3>
    </div>

    <div class="pins">
        <% posts.forEach((post=> { %>
            <div class="pin">

                <img src="/images/data/<%= post.image %>" alt="">
            </div>
            <% })) %>
    </div>
</body>

</html>